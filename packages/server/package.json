{
  "name": "server",
  "private": true,
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "smoke": "node test/smoke.js",
    "test:transcription": "MOCK_TRANSCRIPTION=1 node test/transcription_socket_test.js",
    "test:openai:realtime": "node test/openai_realtime_test.js",
    "test:openai:adapter": "node -r ts-node/register test/openai_realtime_adapter.test.ts",
    "test:sfu:capture": "MOCK_TRANSCRIBER=1 node test/sfu_capture_test.js",
    "test:persist": "node test/persist_transcript_test.js",
    "test:all": "npm run test:openai:adapter && node test/transcription_socket_test.js",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings=0 || true"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mediasoup": "^3.10.0",
    "node-fetch": "^2.6.9",
    "ws": "^8.13.0",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "@aws-sdk/client-s3": "^3.335.0",
    "pg": "^8.11.0",
    "pg-format": "^1.0.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "socket.io-client": "^4.7.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0",
    "@types/ws": "^8.5.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5"
  }
}
